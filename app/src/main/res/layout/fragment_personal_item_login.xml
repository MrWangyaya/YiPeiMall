<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fd0000"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!-- 登陆之后  我的-->

    <!--设置 聊天按钮-->
    <RelativeLayout
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/chat"
            android:id="@+id/iv_chat"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
             />
        <ImageView
            android:paddingRight="20dp"
            android:layout_toLeftOf="@+id/iv_chat"
            android:src="@drawable/chat"
            android:id="@+id/iv_setting"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />

    </RelativeLayout>

    <!-- 用户基本信息-->
    <RelativeLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头像-->
        <cn.hys.zdft.yipeimall.view.customview.CircleImageView
            android:id="@+id/iv_user_photo"
            android:src="@drawable/wd_tx"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <!-- 用户名-->
        <RelativeLayout
            android:paddingLeft="5dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <TextView
                android:paddingBottom="5dp"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:id="@+id/tv_user_name"
                android:text="永华汽车修理厂"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tc_user_level"
                android:drawableLeft="@drawable/wd_hy"
                android:textColor="#ffffff"
                android:layout_alignLeft="@+id/tv_user_name"
                android:layout_below="@+id/tv_user_name"
                android:text="金牌会员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:id="@+id/ll_account_management"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <TextView
                android:paddingRight="15dp"
                android:textColor="@color/textWhite"
                android:gravity="center"
                android:text="账户管理"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />

            <ImageView
                android:src="@drawable/arrow_right_white"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />
        </LinearLayout>





    </RelativeLayout>


</LinearLayout>
